<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:paddingEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/home_bar_bgd">

        <ImageView
            android:id="@+id/iv_drawer"
            android:src="@mipmap/home_drawer"
            android:layout_width="40dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingStart="12dp"
            android:paddingEnd="6dp"
            android:contentDescription="TODO" />
        <ImageView
            android:id="@+id/iv_interest_kits"
            android:src="@mipmap/home_interest_kit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:contentDescription="TODO" />
        <RelativeLayout
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="50dp">
            <View
                android:id="@+id/bar_search"
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:background="@drawable/search_icon_drawable"
                android:layout_height="30dp">
            </View>
            <ImageView
                android:layout_alignBottom="@+id/bar_search"
                android:id="@+id/image_search"
                android:src="@mipmap/icon_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_alignTop="@+id/bar_search"
                android:layout_alignStart="@+id/bar_search"
                android:contentDescription="TODO">
            </ImageView>
            <ImageView
                android:id="@+id/iv_voice"
                android:src="@mipmap/icon_voice"
                android:layout_centerVertical="true"
                android:layout_alignEnd="@+id/bar_search"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="15dp"
                android:contentDescription="TODO">
            </ImageView>
        </RelativeLayout>
        <ImageView
            android:id="@+id/iv_take_photo"
            android:src="@mipmap/icon_take_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="12dp"
            android:contentDescription="TODO">
        </ImageView>

    </LinearLayout>

</androidx.cardview.widget.CardView>